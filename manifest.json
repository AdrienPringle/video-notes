{
	"name": "video notes",
	"version": "0.0.1",
	"description": "annotate videos with notes",
	"permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_popup": "popup/popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["annotations.css"],
			"js": ["annotations.js"]
		}
	],
	"manifest_version": 2
}
